{{>header}}
<link rel="stylesheet" href="css/profile.css">
<div class="wrapper">
    <div class="card text-white">
        <div class="bg-pink"></div>
        <div class="img-container d-flex align-items-center justify-content-center"> <img src="images/gundam02.webp"
                alt="" class="rounded-circle"> </div>
        <div class="user">
            <div class="h5 text-center m-0"> <a href="https://bbbootstrap.com/users/anand-vunnam-78681"
                    target="_blank">PLAYER 00</a> </div>
            <div class="text-center text-white"> <span class="fas fa-users"></span> <span class="followers">90</span>
            </div>
            <div class="d-flex align-items-center justify-content-center mt-2">
                <div class="btn">Follow <span class="fas fa-user-plus"></span> </div>
            </div>
        </div>
        <div class="px-3">
            <div class="d-flex align-items-center justify-content-between py-3 pe-none">
                <div class="details snippets">
                    <div class="head text-uppercase">games:<span class="far fa-edit"></span></div>
                    <div class="fs-08 text-center">75</div>
                </div>
                <div class="details project">
                    <div class="head text-uppercase">attempt:<span class="fas fa-project-diagram"></span></div>
                    <div class="fs-08 text-center">2</div>
                </div>
                <div class="details post">
                    <div class="head text-uppercase">time played:<span class="far fa-comments"></span></div>
                    <div class="fs-08 text-center">0</div>
                </div>
            </div>
            <div class="skills">
                <div class=" head text-uppercase">skill <span class="fas fa-code"></span></div>
                <div class=" pb-3 pt-2">
                    <div class="text-uppercase fs-08"><span class="pe-1 fab fa-html5"></span>html5</div>
                    <div class="level">
                        <div class="progress w-100 html">
                            <div class="progress-bar" role="progressbar" style="width: 95%" aria-valuemin="0"
                                aria-valuemax="100"></div>
                        </div>
                        <div class="ps-2 text-end fs-08 p-html">95%</div>
                    </div>
                    <div class="text-uppercase fs-08"><span class="pe-1 fab fa-css3"></span>css3</div>
                    <div class="level">
                        <div class="progress w-100 css">
                            <div class="progress-bar" role="progressbar" style="width: 90%" aria-valuemin="0"
                                aria-valuemax="100"></div>
                        </div>
                        <div class="ps-2 text-end fs-08 p-css">90%</div>
                    </div>
                    <div class="text-capitalize fs-08"><span class="pe-1 fab fa-js"></span>javascript</div>
                    <div class="level">
                        <div class="progress w-100 js">
                            <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuemin="0"
                                aria-valuemax="100"></div>
                        </div>
                        <div class="ps-2 text-end fs-08 p-js">75%</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/profile.js"></script>